<div class="itemCard">
    <div class="itemContent">
        <h1 class="title">{{name}}</h1>
        <h4 class="category">{{category}}</h4>
        <div class="userId">Posted by {{userId}}</div>
        <div class="description">{{description}}</div>
    </div>

    <img src="{{imageUrl}}" class="smallImage" alt="IMAGE NOT FOUND">

</div>
<div class="itemButtons">
    <div class="currentBid">Highest Bid: {{currentBid}}</div>
    <div class="auctionEnd">Auction ends in {{auctionEnd}}</div>

    
<button class="btn-danger bid-btn" data-category="id" data-toggle="modal" data-target="#modal{{id}}">Bid Now!</button>

<!-- Modal -->
<div class="modal fade" id="modal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bid now!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="row"><img class="modal-image" alt="Product Image Preview" src="{{imageUrl}}" /></div>

        <div class="row">
          <h1 class="modal-name">{{name}}</h1>
        </div>

        <div class="row">
          <h6 class="modal-category">{{category}}</h6>
        </div>

        <div class="row">
          <h5 class="modal-userId">Posted by: {{userId}}</h5>
        </div>

</div>


        <div class="row">
          <p class="modal-description">{{description}}</p>
        </div>

        <div class="row">
          <h1 class="modal-currentBid">Current Price: {{currentBid}}</h1>
        </div>
        <h5>Enter your bid: </h5>
        <h2>$&nbsp;&nbsp;<input type="number" min="0.01" step="0.01" max="2500" class="modal-input row" type="text"></h2>

    
    
      <hr>
      <button type="button" class="btn btn-secondary modal-cancel" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary modal-submit" id="modal-submit">Submit Offer</button>

        </div>
  </div>
  </div>
</div>


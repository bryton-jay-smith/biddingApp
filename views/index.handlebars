<!--Hero image===================================================================================-->
<div class="jumbotron jumbotron-fluid hero-img">
  <div class="container inner-container">
    <h2 class="display-4">Place your bids now!</h2>
    <p>Create an account, select a product category, <br>and <strong>instantly</strong> start bidding on items up for
      auction</p>
  </div>
</div>

<!--Category buttons===========================================================================-->
<div class="container" id="category-btns">
  <div class="row text-center">
    <a href="/products/antiques#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Antiques</i></button></a>
    <a href="/products/apparel#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Apparel</i></button></a>
    <a href="/products/appliances#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Appliances</i></button></a>
    <a href="/products/electronics#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Electronics</i></button></a>
    <a href="/products/home-goods#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Home<br>Goods</i></button></a>
    <a href="/products/jewelery#category-btns"><button type="button" class="btn btn-danger btn-circle btn-xl"><i>Jewelery</i></button></a>
  </div>
</div>

<!--Product Display==========================================================================-->
<div class="container" id="product-display">
  <div class="row text-center container-header">
    <div class="col-lg-11">
      <h1>Place your bids below!!</h1>
    </div>
    <div class="col-lg-1">
      <a href="/add">
      <input class="btn btn-primary add-btn" type="submit" value="Add" />
    </a>
    </div>
  </div>
  <div id="display-content">

    {{#each products}}
      {{> products/products}}
    {{/each}}
  </div>
</div>


